<% content_for(:header_title) do %>
  <%= t "devise.invitations.new.header" %>
<% end %>

<% content_for(:header_subtitle) do %>
  Laden Sie einen neuen Benutzer in Ihre Organisation ein.
<% end %>

<%= bootstrap_form_for(resource, as: resource_name, url: invitation_path(resource_name), method: :post) do |f| %>
  <div class="row" style="max-width: 500px">
    <%= f.text_field :first_name, required: true, wrapper: { class: 'col-md-6' } %>
    <%= f.text_field :last_name, required: true, wrapper: { class: 'col-md-6' } %>
    <%= f.email_field :email, required: true, wrapper: { class: 'col-md-12' } %>
  </div>

  <%= f.submit t("devise.invitations.new.submit_button") %>
<% end %>
