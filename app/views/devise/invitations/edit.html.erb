<h2><%= t "devise.invitations.edit.header" %></h2>

<%= bootstrap_form_for(resource, as: resource_name, url: invitation_path(resource_name), method: :put) do |f| %>
  <%= f.hidden_field :invitation_token, readonly: true %>

  <div class="row" style="max-width: 300px">
    <%= f.password_field :password, required: true, autocomplete: 'new-password', wrapper: { class: 'col-md-12' } %>
    <%= f.password_field :password_confirmation, required: true, autocomplete: 'new-password', wrapper: { class: 'col-md-12' } %>
  </div>

  <%= f.submit t("devise.invitations.edit.submit_button") %>
<% end %>
