<div class="d-flex justify-content-between align-items-center mb-3">
  <h1>Pauschalvorlagen</h1>
  <%= link_to new_flat_template_path, class: 'btn btn-primary' do %>
    <%= fa_icon 'plus', text: 'Hinzufügen' %>
  <% end %>
</div>

<div class="list-group">
  <% @flat_templates.each do |flat_template| %>
    <div class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
      <div>
        <h5 class="mb-1">
          <%= link_to flat_template.name, edit_flat_template_path(flat_template) %>
        </h5>
        <p class="mb-1">
          <%= number_to_currency(flat_template.price) %>
        </p>
      </div>
      <%= link_to flat_template, class: 'btn text-danger shadow-none', method: :delete, data: { confirm: 'Pauschalvorlage wirklich löschen?' } do %>
        <%= fa_icon 'trash-alt' %>
      <% end %>
    </div>
  <% end %>
</div>
