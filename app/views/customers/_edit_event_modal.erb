<div class="modal" id="edit-event-modal" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-md" role="document">
    <%= bootstrap_form_with(id: 'edit-event-form', method: :patch) do |f| %>
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Auftrag editieren</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <%= f.text_field :title, required: true, id: 'task_edit_title', name: 'task[title]' %>
        </div>
        <div class="modal-footer">
          <a class="btn btn-danger" id="task_delete_button" data-method="delete" data-remote="true" data-confirm="Auftrag wirklich löschen?">Löschen</a>
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Abbrechen</button>
          <%= f.submit 'Aktualisieren' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
